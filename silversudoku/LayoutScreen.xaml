<UserControl x:Class="SilverSudoku.LayoutScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    >
  
  <Grid x:Name="LayoutRoot" Background="White" ShowGridLines="True">
      <Grid.RowDefinitions>
      <RowDefinition Height="30" x:Name="TopRow"></RowDefinition>
      <RowDefinition x:Name="FieldRow"></RowDefinition>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="20"></ColumnDefinition>
        <ColumnDefinition x:Name="FieldColumn"></ColumnDefinition>
        <ColumnDefinition x:Name="SectionColumn"></ColumnDefinition>
      </Grid.ColumnDefinitions>
      <Button x:Name="AddSection" Grid.Column="1"></Button>
      <ListBox x:Name="Sections" Grid.Column="2" Width="100" Grid.Row="1">
      </ListBox>
      <Canvas x:Name="Field" Grid.Row="1" Grid.Column="1">        
      </Canvas>
    </Grid>
  
</UserControl>
