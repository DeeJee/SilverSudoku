<UserControl   x:Class="SilverSudoku.IsoFileExplorerUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             >
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox x:Name="FileList" Grid.Column="0" Grid.Row="0" MouseLeftButtonUp="FileList_MouseLeftButtonUp">
            
        </ListBox>
        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="OK" Content="OK" Grid.Column="1" Click="OK_Click"></Button>
            <Button x:Name="Annuleer" Content="Annuleren" Grid.Column="2" Click="Annuleer_Click"></Button>
        </Grid>
    </Grid>
</UserControl>
